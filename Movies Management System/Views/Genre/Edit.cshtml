@model Movies_Management_System.Models.GenreDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update Genre</h2>
<form action="/Genre/Update/@Model.GenreID" method="POST">
    <div style="display:none;">
        @* Pass through the Genre ID *@
        <input type="text" name="GenreID" value="@Model.GenreID" />
    </div>
    <div>
        <label>Genre Name:</label> <input type="text" name="GenreName" value="@Model.GenreName" />
    </div>
    <div>
        <input type="submit" value="Update Genre" />

    </div>
</form>