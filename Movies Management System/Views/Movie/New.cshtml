@model IEnumerable<Movies_Management_System.Models.GenreDto>

@{
    ViewBag.Title = "Create";
}

<h2>Add A New Movie</h2>
<form action="/Movie/Create" method="POST">
    <div class="addInput">
        <label>Movie Title:</label> <input type="text" name="MovieTitle" />
    </div>
    <div class="addInput">
        <label>Publication Year:</label> <input type="number" name="PubYear" />
    </div>
    <div class="addInput">
        <label>Movie Director:</label> <input type="text" name="Director" />
    </div>
    <div class="addInput">
        <label>Movie Ratings:</label> <input type="number" name="Ratings" />
    </div>
    <div class="addInput">
        <label>Movie Genre:</label>
        <select name="GenreID">
            @foreach (var genre in Model)
            {
                <option value="@genre.GenreID">@genre.GenreName</option>

            }
        </select>
    </div>
    <div id="btnContainer">
        <div>
            <input type="submit" value="Add Movie" id="addBtn" />
        </div>
        <div>
            <a id="backbtn" href="/Movie/List">Back to List</a>
        </div>
    </div>
</form>

<style>
    body {
        text-align: center;
    }
    #addBtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        padding: 0.5em;
        color: green;
    }
    #backbtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        margin-left:4em;
        padding: 0.66em;
        color: blue;
    }
    .addInput {
        margin-top:1em;
    }
    #btnContainer{
        display:flex;
        flex-flow:row;
        align-items:baseline;
        justify-content:center;
    }
</style>